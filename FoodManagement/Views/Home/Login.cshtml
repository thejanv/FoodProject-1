@using System.Web.UI.WebControls
@model FoodManagement.Models.USER_REGISTRATION

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!--Bootstrap-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>

    <!--jquery-->
    <script type="text/javascript" src="jquery-3.6.0.min.js"></script>

    <!--External CSS File-->
    <link rel="stylesheet" href="/Content/style.css">

    <!--Font awesome code-->
    <script src="https://kit.fontawesome.com/2243ae231d.js" crossorigin="anonymous"></script>

    <title>Food Train</title>
</head>
<body background="/Content/Images/food.png" class="#login-body">

    @using (Html.BeginForm("Authenticate", "Home", FormMethod.Post))
    {
        
        @Html.AntiForgeryToken()

        <div class="container" id="login-container">
            <div class="myCard">
                <div class="row">
                    <div class="col-md-9">
                        <div class="myCtn">
                            <form class="myForm text-center">
                                <h1>User Login</h1><br>

                                @*<a href="AdminLogin" id="adminlogin" class="adminlogin">AdminLogin</a>*@

                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                @*<div class="admin">
            @Html.ActionLink("AdminLogin", "AdminLogin", new { @class = "login", @id = "login" })

        </div>*@
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-1"><i class="fa-solid fa-envelope"></i></div>
                                        <div class="col-11">
                                            @*@<input type="email" class="form-control" placeholder="Enter email" />@*@


                                            @Html.EditorFor(model => model.EMAIL, new { htmlAttributes = new { @class = "form-control", @name = "email", @PlaceHolder = "Enter email" } })
                                            @Html.ValidationMessageFor(model => model.EMAIL, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-1"><i class="fa-solid fa-lock"></i></div>
                                        <div class="col-11">
                                            @*@<input type="password" class="form-control" placeholder="Enter password" />@*@
                                            @Html.EditorFor(model => model.PASSWORD, new { htmlAttributes = new { @class = "form-control", @name = "password", @PlaceHolder = "Enter password", @Type = "password" } })
                                            @Html.ValidationMessageFor(model => model.PASSWORD, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <p id="login-error">
                                    @ViewBag.msg
                                </p>

                                <div class="form-group">
                                    @*@<input type="button" class="buttn" value="CREATE ACCOUNT" id="login-button" />@*@
                                    <input type="submit" value="Login" class="btn" id="login-button" />
                                </div>

                                <div class="form-group" id="login">
                                    <p>Don't have an account? <a href="Index">Create Here</a></p>
                                </div>

                                <h1>Admin Login</h1>

                                <div class="form-group" id="login">
                                    <button type="submit" class="buttn" id="login-button">
                                        
                                        <a href="AdminLogin" class="nav-link">Admin Login</a>
                                    </button>
                                </div>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</body>
</html>
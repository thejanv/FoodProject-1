                        <button type="button" class="btn-close" data-bs-dismiss="offcanvas" id="offCanvas-header"></button>
                    </div>


                    @using (Html.BeginForm("Content", "Home", FormMethod.Get))
                    {
                        <div class="offcanvas-body">

                            <ul class="navbar-nav ms-auto" id="header-navbar">
                                <li class="nav-item active">
                                    <a href="#" class="nav-link">HOME</a>
                                </li>

                                <li class="nav-item">
                                    <div class="dropdown">
                                        <a class="nav-link dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            FOODS
                                        </a>
                                        <div class="dropdown-menu" aria-labelledby="dropdownMenu1">
                                            <button class="dropdown-item"><a href="#Koththu" id="dropButton">KOTHTHU</a></button>
                                            <button class="dropdown-item"><a href="#bakery" id="dropButton">BAKERY ITEMS</a></button>
                                            <button class="dropdown-item"><a href="#pizza" id="dropButton">PIZZA</a></button>
                                            <button class="dropdown-item"><a href="#rice" id="dropButton">RICE</a></button>
                                            <button class="dropdown-item"><a href="#desert" id="dropButton">DESERT</a></button>
                                        </div>
                                    </div>
                                </li>

                                <li class="nav-item">
                                    <a href="#koththu" class="nav-link">ABOUT</a>
                                </li>

                                @{ var name = (Session["user"] as USER_REGISTRATION).NAME;}
                                <li class="nav-item">
                                    <div class="dropdown">
                                        <a class="nav-link dropdown-toggle" type="button" id="dropdownMenu2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            @name.ToUpper()
                                        </a>
                                        @*@Html.ActionLink((Session["user"] as USER_REGISTRATION).NAME, "Home", new {@class="nav-link dropdown-toggle", @id="dropdownMenu2" , @data-toggle="dropdown", aria-haspopup="true" ,aria-expanded="false"})*@
                                        <div class="dropdown-menu" aria-labelledby="dropdownMenu2">
                                            <button class="dropdown-item"><a href="UserUpdate" id="dropButton">DASHBOARD</a></button>
                                            <button class="dropdown-item"><a href="@Url.Action("Front", "Home")" id="dropButton">LOGOUT</a></button>
                                        </div>
                                    </div>

                                </li>

                                <li class="nav-item">
                                    <a href="Cart" class="nav-link"><i class="fa-solid fa-cart-plus"></i></a>
                                </li>
                            </ul>


                            <ul class="navbar-nav ms-auto">

                                <li class="nav-item">
                                    <input class="form-control mr-sm-2" type="text" placeholder="Search" aria-label="Search" name="name" id="name" />
                                </li>

                                <li class="nav-item">
                                    <center>
                                        <button class="btn btn-secondary mr-sm-0" type="submit" id="searchBtn">Search</button>
                                    </center>
                                </li>
                            </ul>

                        </div>
                    }

                </div>
            </div>
        </nav>

        <!--Landing page starts-->
        <section class="landing" id="landing">
            <div class="container-fluid">
                <div class="container my-5">
                    <div class="row">
                        <div class="col-md-6 text-center">

                            <h1>Food Train</h1>
                        </div>
                        <div class="col-md-6 text-center">
                            <img src="/Content/Images/landing-image.png" alt="Burger-Photo" width="80%">
                        </div>

                    </div>
                </div>
            </div>
        </section>
    </header>
    <!--Landing page ends-->

    @{
        var Koththu = from ko in Model where ko.FOODID == 100 select ko;
        var bakery = from bak in Model where bak.FOODID == 101 select bak;
        var pizza = from pi in Model where pi.FOODID == 102 select pi;
        var rice = from ri in Model where ri.FOODID == 103 select ri;
        var desert = from des in Model where des.FOODID == 104 select des;
    }


    <!--Koththu section starts-->
    <section class="Koththu" id="Koththu">
        <div class="container-fluid">
            <div class="container">
                <h1>Koththu</h1>
                <div class="owl-carousel owl-theme">
                    @foreach (var item in Koththu)
                    {
                        <div class="content-area">
                            <div class="content p-5">
                                <div class="card text-center">
                                    <img class="card-img-top" src="@Url.Content(item.IMGPATH)" alt="Card image cap" width="10%">
                                    <div class="card-body">
                                        <h5 class="card-title text-center">@Html.DisplayFor(modelItem => item.NAME)</h5>
                                        <p class="card-text text-center">Rs.@Html.DisplayFor(modelItem => item.PRICE)</p>
                                        <button class="button" id="link-order" onclick="location.href='@Url.Action("OrderNow", "Home", new { id = item.TYPEID })'"> Order Now <i class="fa-solid fa-cart-plus"></i></button>

                                        <p class="qty-cart text-center" id="qty-cart"></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }


                </div>
            </div>
        </div>
    </section>



    <!--Koththu section ends-->
    <!--Bakery section starts-->
    <section class="bakery" id="bakery">
        <div class="container-fluid">
            <div class="container">
                <h1>Bakery Items</h1>
                <div class="owl-carousel owl-theme">
                    @foreach (var item in bakery)
                    {
                        <div class="content-area">
                            <div class="content p-5">
                                <div class="card text-center">
                                    <img class="card-img-top" src="@Url.Content(item.IMGPATH)" alt="Card image cap" width="10%">

    </header>
    <!--Landing page ends-->
    <!--Header section ends-->
    <!--Koththu section starts-->

    @{
        var Koththu = from ko in Model where ko.FOODID == 100 select ko;
        var bakery = from bak in Model where bak.FOODID == 101 select bak;
        var pizza = from pi in Model where pi.FOODID == 102 select pi;
        var rice = from ri in Model where ri.FOODID == 103 select ri;
        var desert = from des in Model where des.FOODID == 104 select des;
    }
  

  
<section class="Koththu" id="Koththu">
    <div class="container-fluid">
        <div class="container">
            <h1>Koththu</h1>
            <div class="owl-carousel owl-theme">
                @foreach (var item in Koththu)
                {
                    <div class="content-area">
                        <div class="content p-5">
                            <div class="card text-center">
                                <img class="card-img-top" src="@Url.Content(item.IMGPATH)" alt="Card image cap" width="10%">
                                <div class="card-body">
                                    <h4 class="card-title text-center">@Html.DisplayFor(modelItem => item.NAME)</h4>
                                    <p class="card-text text-center">Rs.@Html.DisplayFor(modelItem => item.PRICE)</p>
                                    @*<button class="button" id="link-order">*@ @Html.ActionLink("Order Now", "OrderNow", "Home", new { id = item.TYPEID , @style = "color:#fff;text-decoration:none" }, null) <i class="fa-solid fa-cart-plus"></i>@*</button>*@
                                    
                                    
                                    
                                <p class="qty-cart text-center" id="qty-cart">@Html.DisplayFor(modelItem => item.QUANTITY)</p>
                                </div>
                            </div>
                        </div>
                    </div>
                }


            </div>
        </div>
    </div>
</section>
    
    

    <!--Koththu section ends-->
    <!--Bakery section starts-->
    <section class="bakery" id="bakery">
        <div class="container-fluid">
            <div class="container">
                <h1>Bakery Items</h1>
                <div class="owl-carousel owl-theme">
                    @foreach (var item in bakery)
                    {
                        <div class="content-area">
                            <div class="content p-5">
                                <div class="card text-center">
                                    <img class="card-img-top" src="@Url.Content(item.IMGPATH)" alt="Card image cap" width="10%">
                                    <div class="card-body">
                                        <h4 class="card-title text-center">@Html.DisplayFor(modelItem => item.NAME)</h4>
                                        <p class="card-text text-center">Rs.@Html.DisplayFor(modelItem => item.PRICE)</p>
                                        <a href="#"><button class="button">ADD TO CART <i class="fa-solid fa-cart-plus"></i></button></a>
                                        @Html.ActionLink("Order Now", "OrderNow", "Home", new { id = item.TYPEID }, null)
                                    <p class="qty-cart text-center" id="qty-cart">@Html.DisplayFor(modelItem => item.QUANTITY)</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }


                </div>
            </div>
        </div>
    </section>
    <!--Bakery section ends-->
    <!--Pizza section starts-->
    <section class="pizza" id="pizza">
        <div class="container-fluid">
            <div class="container">
                <h1>PIZZA</h1>
                <div class="owl-carousel owl-theme">
                    @foreach (var item in pizza)
                    {
                        <div class="content-area">
                            <div class="content p-5">
                                <div class="card text-center">

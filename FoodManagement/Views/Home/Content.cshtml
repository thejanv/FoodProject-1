    </header>
    <!--Landing page ends-->
    <!--Landing page starts-->
    <section class="landing" id="landing">
        <div class="container-fluid">
            <div class="container my-5">
                <div class="row">
                    <div class="col-md-6 text-center landing-text">
                        <p class="tag1"><span class="tag1-upper">S</span>uper <span class="tag1-upper">D</span>elicious <span class="tag1-upper">F</span>oods</p>
                        <h2>Food Train</h2>
                        <p class="tag2">Lorem ipsum dolor sit amet consectetur adipisicing elit. Laborum odio magnam laudantium autem provident obcaecati id sit libero.</p>
                        <button type="button" class="btn btn-order mt-3 mb-3">Order Now</button>
                    </div>
                    <div class="col-md-6 text-center landing-img">

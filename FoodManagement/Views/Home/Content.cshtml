                                        <p class="qty-cart text-center" id="qty-cart"></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }



                </div>
            </div>
        </div>
    </section>
    <!--Pizza section ends-->
    <!--Rice section starts-->
    <section class="rice" id="rice">
        <div class="container-fluid">
            <div class="container">
                <h1>
                    @if (rice.Count() > 0)
                    {
                        @Html.Label("Rice");
                    }
                    else
                    {
                        @Html.Label("");
                    }
                </h1>
                <div class="owl-carousel owl-theme">

                    @foreach (var item in rice)
                    {
                        <div class="content-area">
                            <div class="content p-5">
                                <div class="card text-center">
                                    <img class="card-img-top" src="@Url.Content(item.IMGPATH)" alt="Card image cap" width="10%">
                                    <div class="card-body">
                                        <h5 class="card-title text-center">@Html.DisplayFor(modelItem => item.NAME)</h5>
                                        <p class="card-text text-center">Rs.@Html.DisplayFor(modelItem => item.PRICE)</p>
                                        <button class="button" id="link-order" onclick="location.href='@Url.Action("OrderNow", "Home", new { id = item.TYPEID })'"> Order Now <i class="fa-solid fa-cart-plus"></i></button>

                                        <p class="qty-cart text-center" id="qty-cart"></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }



                </div>
            </div>
        </div>
    </section>
    <!--Rice section ends-->
    <!--Desert section starts-->
    <section class="desert" id="desert">
        <div class="container-fluid">
            <div class="container">
                <h1>
                    @if (desert.Count() > 0)
                    {
                        @Html.Label("Deserts");
                    }
                    else
                    {
                        @Html.Label("");
                    }
                </h1>
                <div class="owl-carousel owl-theme">

                    @foreach (var item in desert)
                    {
                        <div class="content-area">
                            <div class="content p-5">
                                <div class="card text-center">
                                    <img class="card-img-top" src="@Url.Content(item.IMGPATH)" alt="Card image cap" width="10%">
                                    <div class="card-body">
                                        <h5 class="card-title text-center">@Html.DisplayFor(modelItem => item.NAME)</h5>
                                        <p class="card-text text-center">Rs.@Html.DisplayFor(modelItem => item.PRICE)</p>
                                        <button class="button" id="link-order" onclick="location.href='@Url.Action("OrderNow", "Home", new { id = item.TYPEID })'"> Order Now <i class="fa-solid fa-cart-plus"></i></button>

                                        <p class="qty-cart text-center" id="qty-cart"></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }


                </div>
            </div>
        </div>
    </section>

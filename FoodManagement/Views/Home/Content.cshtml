@model IEnumerable<FoodManagement.Models.FOOD_TYPE>

@{
    ViewBag.Title = "Content";
}

<h2>Content</h2>
@using (Html.BeginForm())
{
    <input type="text" name="search" id="search" />
    <input type="submit" value="Submit" />

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NAME)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PRICE)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.QUANTITY)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FOOD_ITEM.NAME)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NAME)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PRICE)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.QUANTITY)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FOOD_ITEM.NAME)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.TYPEID }) |
            @Html.ActionLink("Details", "Details", new { id = item.TYPEID }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.TYPEID })
        </td>
    </tr>
}

</table>
}

                                        <p class="card-text text-center">Rs.@Html.DisplayFor(modelItem => item.PRICE)</p>
                                        <a href="#"><button class="button">ADD TO CART <i class="fa-solid fa-cart-plus"></i></button></a>
                                        @Html.ActionLink("Order Now", "OrderNow", "Home", new { id = item.TYPEID }, null)
                                        <p class="qty-cart text-center" id="qty-cart">5</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }



            </div>
        </div>
    </div>
</section>
<!--Pizza section ends-->
<!--Rice section starts-->
<section class="rice" id="rice">
    <div class="container-fluid">
        <div class="container">
            <h1>
                @if (rice.Count() > 0)
                {
                    @Html.Label("Rice");
                }
                else
                {
                    @Html.Label("");
                }
            </h1>
            <div class="owl-carousel owl-theme">


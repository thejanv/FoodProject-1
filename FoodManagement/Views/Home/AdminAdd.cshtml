<body background="/Content/Images/Food.png" class="#login-body">



    @using (Html.BeginForm("AdminAdd", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        <div class="container" id="signup-container">
            <div class="myCard">
                <div class="row">
                    <div class="col-md-8">
                        <div class="myCtn">
                            <form class="myForm text-center">
                                <header>Add New Items</header><br>

                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-1"><i class="fa-solid fa-user"></i></div>
                                        <div class="col-11">
                                            @*<input type="text" class="form-control" placeholder="Enter name"/>*@
                                            @Html.EditorFor(model => model.FOODID, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter Food ID" } })
                                            @Html.ValidationMessageFor(model => model.FOODID, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <br />
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-1"><i class="fa-solid fa-envelope"></i></div>
                                        <div class="col-11">
                                            @*<input type="email" class="form-control" placeholder="Enter email"/>*@
                                            @Html.EditorFor(model => model.NAME, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter Name" } })
                                            @Html.ValidationMessageFor(model => model.NAME, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <br />
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-1"><i class="fa-solid fa-square-phone"></i></div>
                                        <div class="col-11">
                                            @*<input type="text" class="form-control" placeholder="Enter mobile number"/>*@
                                            @Html.EditorFor(model => model.PRICE, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter The Price" } })
                                            @Html.ValidationMessageFor(model => model.PRICE, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <br />
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-1"><i class="fa-solid fa-lock"></i></div>
                                        <div class="col-11">
                                            @*<input type="password" class="form-control" placeholder="Enter password"/>*@
                                            @Html.EditorFor(model => model.QUANTITY, new { htmlAttributes = new { @class = "form-control", @id = "password", @placeholder = "Enter The Quantity" } })
                                            @Html.ValidationMessageFor(model => model.QUANTITY, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <br />


                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-1"><i class="fa-solid fa-location-dot"></i></div>
                                        <div class="col-11">
                                            <input type="file" name="ImageFile" required />
                                        </div>
                                    </div>
                                </div>

                                <br />

                                <div class="form-group">
                                    @*<input type="button" class="buttn" value="CREATE ACCOUNT" id="signup-button" />*@
                                    <input type="submit" value="CREATE ACCOUNT" class="buttn" onclick="check()" id="signup-button" />
                                </div>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div>
            @Html.ActionLink("Display Items", "Display")
        </div>
    }



    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>